        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="forceSmallClock"
            android:title="Force Small Clock (A12)" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="qsTileVibrate"
            android:title="Vibrate QS tiles on Tap" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="hideBuildNumber"
            android:title="Hide Build Number in QS Panel" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="disableScreenshotSound"
            android:title="Disable Screenshot Sound" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="enableClipboardSmartActions"
            android:title="Clipboard Smart Actions" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="sysUiTuner"
            android:title="System UI Tuner" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="allowDowngrade"
            android:title="Allow App Downgrade" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="allowMismatchedSignature"
            android:title="Allow Mismatched Signature" />
        <sh.siava.AOSPMods.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="vibrateOnCallAnswered"
            android:title="Vibrate On Call Answered" />
